<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_Illustration"
        android:layout_width="870dp"
        android:layout_height="718dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="-100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_start_illustration" />

    <LinearLayout
        android:layout_width="476dp"
        android:layout_height="460dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_LSLogo"
            android:layout_width="408dp"
            android:layout_height="187dp"
            app:srcCompat="@drawable/ic_start_ls_logo" />

        <Button
            android:id="@+id/btn_SignUp"
            android:layout_width="300dp"

            android:layout_height="48dp"
            android:backgroundTint="@color/ls_red"
            android:fontFamily="@font/poppins"
            android:textFontWeight="600"
            android:text="Sign Up"
            android:textSize="7pt"
            app:cornerRadius="30dp" />

        <TextView
            android:id="@+id/textView_OR"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="OR"
            android:textFontWeight="300"
            android:textAlignment="center"
            android:textColor="@color/ls_teal_dark"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/textView_Already"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:textFontWeight="600"
            android:text="Already Registered?"
            android:textAlignment="center"
            android:textColor="@color/ls_teal_dark"
            android:textSize="10pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Login"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/ls_teal"
            android:fontFamily="@font/poppins"
            android:textFontWeight="600"
            android:text="Login"
            android:textSize="7pt"
            app:cornerRadius="30dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>